{% extends "main.twig" %}

{% block title %} Главная {% endblock %}

{% block titlePage %} Гостевая книга {% endblock %}

{% block content %}
    <table class="table table-hover">
        <thead>
        <tr>
            <th>#</th>
            <th>Имя</th>
            <th>Дата</th>
            <th>IP адрес</th>
            <th>Отзыв</th>
            <th>Кол-во лайков</th>
        </tr>
        </thead>
        <tbody>
            {% for user in result %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.date }}</td>
                    <td>{{ user.ip }}</td>
                    <td>{{ user.reviews }}</td>
                    <td>{{ user.likes }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}