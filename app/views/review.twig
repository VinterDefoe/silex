{% extends 'main.twig' %}

{% block title %} {{ result.name }} {% endblock %}

{% block titlePage %} {{ result.name }} {% endblock %}

{% block content %}
    <table class="table ">
        <thead>
        <tr>
            <th>#</th>
            <th>Имя</th>
            <th>Дата</th>
            <th>IP адрес</th>
            <th>Отзыв</th>
            <th>Кол-во лайков</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ result.id }}</td>
                <td>{{ result.name }}</td>
                <td>{{ result.date }}</td>
                <td>{{ result.ip }}</td>
                <td>{{ result.reviews }}</td>
                <td>
                    {{ result.likes }}
                    <a href="">
                        <span class="glyphicon glyphicon-thumbs-up b-like"></span>
                    </a>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="row">
        <div class="col-lg-1">
            <button type="button" class="btn btn-primary btn-block">Prev</button>
        </div>
        <div class="col-lg-1">
            <button type="button" class="btn btn-primary btn-block">Next</button>
        </div>
    </div>
{% endblock %}